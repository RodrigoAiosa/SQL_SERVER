--Criar Trigger com o seguinte objetivo: Ao deletar um dado pelo campo 'id_aluno' a coluna ''status_inf'' ir√° mudar de 1 (Ativo) para 0 (Inativo)

DELETE FROM 
	CadAluno 
WHERE id_aluno = '4'
SELECT * FROM CadAluno


--PROCEDURE Deletar Dados

CREATE or ALTER PROCEDURE sp_Deletar @Nome varchar(50)
AS
	DELETE FROM 
		CadAluno
	WHERE 
		nome = @Nome

exec sp_Deletar 'Aluno_12'
SELECT * FROM CadAluno

