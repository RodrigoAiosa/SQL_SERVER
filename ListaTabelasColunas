USE
	AdventureWorks2017

SELECT 
	 t.TABLE_CATALOG						as 'BANCO'
	,t.TABLE_SCHEMA							as 'GRUPO'
	,t.TABLE_NAME							as 'NOME TABELA'
	,c.COLUMN_NAME							as 'NOME COLUNA'
	,c.ORDINAL_POSITION						as 'ORDEM COLUNA'
FROM 
	INFORMATION_SCHEMA.TABLES t
	INNER JOIN INFORMATION_SCHEMA.COLUMNS c
		ON c.TABLE_NAME = t.TABLE_NAME
WHERE
	t.TABLE_SCHEMA !='dbo'
	AND t.TABLE_TYPE !='VIEW'
ORDER BY
	t.TABLE_SCHEMA ASC
